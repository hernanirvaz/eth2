#!/bin/bash

i="\n\e[5m"
f="\e[25m\n"

ethg="eth-geth"
ethb="eth-beacon"
ethv="eth-validator"
ethp="prometheus"
ethn="prometheus-node-exporter"
ethf="grafana-server"
vers="stable"
vers="v1.0.3"

if [ "$1" = "linux" ] || [ -z "$1" ]; then
  echo -e "${i}FULL-UPGRADE${f}"
  echo $H|sudo -S apt update -y 2>/dev/null
  sudo apt full-upgrade -y && sudo apt dist-upgrade -y
  sudo apt autoremove
  sudo apt autoclean
  # Enable automatic updates so you don't have to manually install them.
  # sudo apt install unattended-upgrades
  # sudo dpkg-reconfigure -plow unattended-upgrades
fi

if [ "$1" = "eth" ] || [ -z "$1" ]; then
  if [ -f ~/.rustup/settings.toml ]; then
    echo -e "${i}RUST UPDATE${f}"
    rustup update
  fi
  if [ -x /usr/local/bin/lighthouse ]; then
    echo -e "${i}LIGHTHOUSE UPDATE${f}"
    if [ -f ~/lighthouse/README.md ]; then
      cd ~/lighthouse
      make clean
      # not sure if needed
      # cargo clean
      git fetch
      git checkout ${vers}
    else
      cd ~
      echo $H|sudo -S rm -rf ~/lighthouse 2>/dev/null
      git clone https://github.com/sigp/lighthouse.git
      cd ~/lighthouse
      git checkout ${vers}
    fi 
    make
    if [ $? -eq 0  ] && [ -x  ~/.cargo/bin/lighthouse ]; then
      echo $H|sudo -S mv /usr/local/bin/lighthouse /usr/local/bin/lighthouse.save 2>/dev/null
      t6 vpr
      t6 bpr
      sudo cp ~/.cargo/bin/lighthouse /usr/local/bin
      t6 ba
      t6 va
    else
      echo -e "${i}NAO EXISTE LIGHTHOUSE COMPILADO PARA INSTALAR${f}"
    fi
  fi
fi
