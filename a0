#!/usr/bin/bash

pfpd='2001:8a0:fcef:9f00'
cunm=$(hostname)
cuip=$(hostname -I);cuip=${cuip%% *}
vip1='51.89.64.77' ;vnd1='ns31198432.ip-51-89-64.eu'   ;vnm1=${vnd1%%.*};vis1='127.0.0.1'
vip2='51.89.64.205';vnd2='ns3168040.ip-51-89-64.eu'    ;vnm2=${vnd2%%.*};vis2='127.0.0.1'
vip3='161.97.85.32';vnd3='vmi1007895.contaboserver.net';vnm3=${vnd3%%.*};vis3='127.0.0.1'
trdi='/mnt/data/downloads'
mddi='/media/mp4'

function sin {
  case $1 in
  hrv-zotac1*) printf 192.168.8.25 ;;
  hrv-zotac2*) printf 192.168.8.28 ;;
  hrv-zotac3*) printf 192.168.8.31 ;;
  hrv-zotac4*) printf 192.168.8.34 ;;
  hrv-intel5*) printf 192.168.8.37 ;;
  hrv-intel6*) printf 192.168.8.40 ;;
  hrv-zen*   ) printf 192.168.8.100 ;;
  hrv-lenovo*) printf 192.168.8.101 ;;
  $vnm1*) printf $vip1 ;;
  $vnm2*) printf $vip2 ;;
  $vnm3*) printf $vip3 ;;
  *) printf %s "$1" ;;
  esac
}
function snd {
  case $1 in
  $vnm1) printf $vnd1 ;;
  $vnm2) printf $vnd2 ;;
  $vnm3) printf $vnd3 ;;
  *) printf %s "$1" ;;
  esac
}
function si6 {
  case $1 in
  hrv-zotac1*) printf %s $pfpd:201:2eff:fea0:88d4 ;;
  hrv-zotac2*) printf %s $pfpd::1002 ;;
  hrv-zotac3*) printf %s $pfpd::1003 ;;
  hrv-zotac4*) printf %s $pfpd::1004 ;;
  hrv-intel5*) printf %s $pfpd::1005 ;;
  hrv-intel6*) printf %s $pfpd::1006 ;;
  hrv-zen*   ) printf %s $pfpd::1100 ;;
  hrv-lenovo*) printf %s $pfpd::1101 ;;
  *) printf %s "$1" ;;
  esac
}
function sl6 {
  case $1 in
  hrv-zotac1*) printf %s fe80::201:2eff:fea0:88d4 ;;
  hrv-zotac2*) printf %s fe80::201:2eff:fea0:e06f ;;
  hrv-zotac3*) printf %s fe80::201:2eff:fea0:88ea ;;
  hrv-zotac4*) printf %s fe80::201:2eff:fea4:f04c ;;
  hrv-intel5*) printf %s fe80::4a21:bff:fe55:4076 ;;
  hrv-intel6*) printf %s fe80::4a21:bff:fe52:6c5e ;;
  hrv-zen*   ) printf %s fe80::9fa6:2019:3db8:d1b6 ;;
  hrv-lenovo*) printf %s fe80::c988:b438:1645:2e90 ;;
  *) printf %s "$1" ;;
  esac
}
function spn {
  local s=${1%%.*}
  local n=2020
  case $1 in
  hrv*) n=$((n+${s##*[!0-9]})) ;;
  192.168.8.25) n=2021 ;;
  192.168.8.28) n=2022 ;;
  192.168.8.31) n=2023 ;;
  192.168.8.34) n=2024 ;;
  192.168.8.37) n=2025 ;;
  192.168.8.40) n=2026 ;;
  esac
  printf %i $n
}
function sio {
  local i=111
  case $1 in
  2021) i=25 ;;
  2022) i=28 ;;
  2023) i=31 ;;
  2024) i=34 ;;
  2025) i=37 ;;
  2026) i=40 ;;
  esac
  printf %i $i
 
}
function sns {
  if [[ ${#1} -eq 2 ]]; then
    if [[ ${1:0:1} = z ]]; then
      if [[ ${1:1:1} -le 4 ]]; then
        printf %s "${1/z/hrv-zotac}"
      else
        printf %s "${1/z/hrv-intel}"
      fi
    else
      case $1 in
      v1) printf %s "$vnd1" ;;
      v2) printf %s "$vnd2" ;;
      v3) printf %s "$vnd3" ;;
       *) printf %s "$1" ;;
      esac
    fi
  else
    printf %s "$1"
  fi
}
function stt { [[ $cut1 != $cut2 ]]; }
function sxt { [[ $cunm = $cut1 || $cunm = $cut2 ]]; }
function sht { [[ ${1:-$cuip} = 192.168.8.* ]]; }
function snt { [[ $1 = hrv* ]]; }
function smt { sht "$1" || snt "$1"; }
function sst { local s=${1:-$cunm};[[ $s != hrv-zen && $s != hrv-lenovo ]]; }
function dnn {
  local s=$(snd "$1")
  nslookup "$s" > /dev/null 2>&1 || s=$(sin "$1")
  [[ "$s" = "192.168.8.25" || "$s" = hrv-zotac1* ]] && s="admin@$s"
  printf %s "$s"
}
function dnz { local p=$2;[[ $p ]] || p=$(spn "$1");printf %i "$p"; }
function zsh { ssh -4p "$1" -i ~/.ssh/id_ed25519 "$2" "$3"; }
function zcp { local p=$1;local d=$2;shift;shift;scp -4rP "$p" -i ~/.ssh/id_ed25519 $@ "$d"; }
function xcp { local p;local s;p=$(dnz "$1");s=$(dnn "$1");local d=$2;shift;shift;echo "scp -4rP $p \$@ $s:$d";zcp "$p" "$s:$d" "$@"; }
function mcp {
    if [[ $# -lt 1 ]];then
    echo -e "mcp <f> [s:v1] [d:~]\tscp <f>ile(s) [s]erver:[d]estination"
    return
  fi
  local s=${2:-v1}
  local d=${3:-~}
  xcp "$(sns $s)" "$d" "$1"
}
function pcm { 
  local n;local p;local e=${1^^};local s=hrv-zotac1;n=$(dnn $s);p=$(dnz $s);local m='eth2/rt-GR241AG'
  if   [[ $e = PRB ]];then zsh "$p" "$n" "/etc/rc.reboot"
  elif [[ $e = NTP ]];then zsh "$p" "$n" "ntpq -np"
  elif [[ $e = LRB ]];then echo;if [[ -f ~/$m ]]; then echo meo reboot log;tail -n5 ~/$m;fi;zsh "$p" "$n" "echo last reboot;last reboot|head -n5|sed 's%  *% %g'|sort -k5n;echo wan check log;tail -n15 /root/wan-check.log;echo;date +'%Y-%m-%d %H:%M:%S'"
  elif [[ $e = IP6 ]];then zsh "$p" "$n" "ifconfig re0|grep inet6|grep -v fe80|awk '{print \$2}'"
  else                     zsh "$p" "$n" 'cat /root/wan-check.log'
  fi
}
function tcm {
  local s
  s=hrv-zotac2;echo -e "\n\e[32m$s chronyc\e[0m";zsh $(dnz $s) $(dnn $s) "chronyc -n sources"
  s=hrv-zotac3;echo -e "\n\e[32m$s chronyc\e[0m";zsh $(dnz $s) $(dnn $s) "chronyc -n sources"
}
function san { local s=${1:-UP};ip -j addr|jq -r ".[]|select(.operstate==\"${s^^}\").ifname"|grep '^en'; }
function sa6 { local s=${1:-UP};ip -j addr|jq -r ".[]|select(.operstate==\"${s^^}\").addr_info.[]|select(.family==\"inet6\" and .scope==\"global\").local"; }
